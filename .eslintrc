{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".ts", ".js", ".json"]
      }
    },
    "import/extensions": [".js", ".ts"]
  },
  "rules": {
    "no-unused-vars": "off",
    "implicit-arrow-linebreak": "off",
    "max-len": "off",
    "comma-dangle": "off",
    "max-classes-per-file": ["error", 10],
    "semi": "off",
    "@typescript-eslint/semi": "off",
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "ts": "never"
      }
    ],
    "no-underscore-dangle": [
      "error",
      {
        "allow": ["_id"]
      }
    ]
  }
}
